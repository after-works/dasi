<div class="dialog-overlay" onclick="popdown()"></div>
<div class="dialog-box" id="songtag-dialog">
  <button onclick="popdown()">
    닫기
  </button>
  <%= form_for :songtag, :html =>{:id=>'songtag_add_form'}, :url=>songtags_path do |f| %>
    <%= f.hidden_field :uid, :value=>user.id %>
    <div class="field">
      제목: <%= f.text_field :title %>
    </div>
    <div class="field">
      <!-- table에 아이템이 추가되는 부분은 js로 작-->
      <ul id="add-song-list-in-new-songtag">
        <%= f.fields_for "song[]", Song.new do |song_form| %>
        <% end %>
      </ul>
    </div>
    <div class="field">
      <input type="text" name="add-mint-name-in-new-songtag" placeholder="민트 제목">
      <input type="text" name="add-mint-youtube-link-in-new-songtag" placeholder="유튜브 링크">
      <a href="#" onclick="songtag_form_add_song()">추가</a>
    </div>
    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>