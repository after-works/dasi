<% if @is_last %>
	$("#more-cmt-btn").html("<%= escape_javascript (render 'comments/detail_more_cmt_last')%>")
<% else %>
	$("#more-cmt-btn").html("<%= escape_javascript (render 'comments/detail_more_cmt_form', :songtag=>@songtag , :next_page_num=>@next_page)%>")
<% end %>

<% @comments.each do |cmt|%>
	$("#cmt-div").append("<%= escape_javascript ( render 'comments/show_detail_cmt', :comment=>cmt, :comment_form=>@comment_form, :comment_log_form=> @comment_log, :cur_songtag_id => @songtag.id)%>")
<% end %>

$(".detail-comment").mCustomScrollbar("update")