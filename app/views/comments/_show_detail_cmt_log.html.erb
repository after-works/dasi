<% log = my_status_choice(comment) %>

<div class="detail-cmt-log">
	<div class="log-btn">
		<% if done_like? (log) %>
			<a href="/comment_logs.<%=log.id%>" data-method="delete" rel="nofollow">
				<button>좋아요 취소</button>
			</a>
		<% else %>
			<%= form_for comment_log_form do |f| %>
				<%= f.hidden_field :comment_id, :value=>comment.id%>
				<%= f.hidden_field :uid, :value=>current_user.id%>
				<%= f.hidden_field :status, :value=>1%>
				<%= hidden_field_tag :songtag_id, cur_songtag_id%>
				<%= f.button "좋아요" , :class=>'like_btn'%>
			<% end %>
		<% end %>
	</div>

	<div class="log-btn">
		<% if done_dislike? (log) %>
			<a href="/comment_logs.<%=log.id%>" data-method="delete" rel="nofollow">
				<button>좋아요 취소</button>
			</a>
		<% else %>
			<%= form_for comment_log_form do |f| %>
				<%= f.hidden_field :comment_id, :value=>comment.id%>
				<%= f.hidden_field :uid, :value=>current_user.id%>
				<%= f.hidden_field :status, :value=>-1%>
				<%= hidden_field_tag :songtag_id, cur_songtag_id%>
				<%= f.button "싫어요" , :class=>'dislike_btn'%>
			<% end %>
		<% end %>
	</div>
</div>

