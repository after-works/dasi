<div>
	<div><!-- first row-->
		<div><!-- name -->
			<%= comment.user.name %>
		</div>
		<div><!-- date time-->
			<%= comment.created_at%>
		</div>
		<div><!-- btn -->
			<div><!-- like -->
				<%= cmt_likes(comment).count %>
			</div>
			<div><!-- dislike-->
				<%= cmt_dislikes(comment).count %>
			</div>
			<div><!-- re-cmt num -->
				<%= comment.re_comments.count %>
			</div>
		</div>
	</div>
	<div><!-- content -->
		<%= comment.context %>
	</div>
	<div><!-- mouse over-->
		<%= render 'comments/show_detail_cmt_log', :comment_log_form=>comment_log_form, :comment=>comment, :cur_songtag_id => cur_songtag_id%>
	</div>
</div>
<% if has_recmt? comment%>
<div>
	<%= render 'comments/show_detail_re_cmt', :re_cmts=>comment.re_comments, :parent_cmt=>comment, :comment_form=>comment_form, :comment_log_form=>comment_log_form, :cur_songtag_id => cur_songtag_id%>
</div>
<% end %>
