<div id="detail-song-video">
	<iframe src="//www.youtube.com/embed/<%= song.youtube_id%>" frameborder="0" allowfullscreen></iframe>
</div>


<div class="info" id="detail-song-info">
	<div class="title pull-left">
		<%= song.title%>
	</div>
	<div class="pull-right">
		<div class="small">
			<%= song.user.name%> | <%=convert_time(song.created_at)%> | 
		</div>
		<div class="facebook-btn">
			<%= render 'facebook_utils/share_link_form', :songtag=>@songtag, :song=>song %>
		</div>
	</div>
</div>
